<div class="container-fluid fill">
    <table class="table table-center table-striped table-hover text-center">
        <thead><tr>
          <th><h3>Image</h3></th>
          <th><h3>Name</h3></th>
        </tr></thead>
        <tbody>
            <% @products.each do |product| %>
                <tr>
                    <td>
                      <img src="<%= product.lots.first.image %>" alt="<%= product.id %>">
                    </td>
                    <td>
                      <b><%= link_to " #{product.name}", product %></b>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
